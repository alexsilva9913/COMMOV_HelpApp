<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".marker_desc"
    android:background="@color/Background">

    <TextView
        android:id="@+id/labelTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outputTituloMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:text="@string/Titulo"
        app:layout_constraintEnd_toEndOf="@+id/labelTitulo"
        app:layout_constraintStart_toStartOf="@+id/labelTitulo"
        app:layout_constraintTop_toBottomOf="@+id/labelTitulo" />

    <TextView
        android:id="@+id/labelTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/TipoPonto"
        app:layout_constraintEnd_toEndOf="@+id/outputTituloMarker"
        app:layout_constraintStart_toStartOf="@+id/outputTituloMarker"
        app:layout_constraintTop_toBottomOf="@+id/outputTituloMarker" />

    <TextView
        android:ems="10"
        android:id="@+id/outputTipoMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        android:text="@string/Titulo"
        app:layout_constraintEnd_toEndOf="@+id/labelTipo"
        app:layout_constraintStart_toStartOf="@+id/labelTipo"
        app:layout_constraintTop_toBottomOf="@+id/labelTipo" />

    <TextView
        android:id="@+id/labelDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/Description"
        app:layout_constraintEnd_toEndOf="@+id/outputTipoMarker"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/outputTipoMarker"
        app:layout_constraintTop_toBottomOf="@+id/outputTipoMarker" />

    <TextView
        android:id="@+id/OutputMarkerDescricao"
        android:layout_width="328dp"
        android:layout_height="104dp"
        android:background="@drawable/rectangle"
        android:text="@string/Desc"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/outputTipoMarker"
        app:layout_constraintStart_toStartOf="@+id/outputTipoMarker"
        app:layout_constraintTop_toBottomOf="@+id/labelDesc"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/buttonVoltar"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonEditar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonEditar"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonEditar"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="108dp"
        android:text="@string/editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="@+id/OutputMarkerDescricao"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>